---
import { getCollection } from "astro:content";
import type { GetStaticPathsOptions } from "astro";
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Card from "@/components/Card.astro";
import Pagination from "@/components/Pagination.astro";
import getUniqueTags from "@/utils/getUniqueTags";
import getPostsByTag from "@/utils/getPostsByTag";
import { SITE } from "@/config";
import { useTranslations, type Lang } from "@/i18n/ui";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const allPosts = await getCollection("blog");
  const languages = ["zh"];

  return languages.flatMap(lang => {
    const langPosts = allPosts.filter(({ id }) => id.startsWith(`${lang}/`));
    const tags = getUniqueTags(langPosts);

    return tags.flatMap(({ tag, tagName }) => {
      const tagPosts = getPostsByTag(langPosts, tag);

      return paginate(tagPosts, {
        params: { lang, tag },
        props: { tagName },
        pageSize: SITE.postPerPage,
      });
    });
  });
}

const params = Astro.params;
const { tag, lang } = params as { tag: string; lang: Lang };
const { page, tagName } = Astro.props;
const t = useTranslations(lang as Lang);

const tagDesc = t("page.tagDesc").replace("{tag}", tagName);
---

<Layout title={`${t("page.tagPrefix")} ${tagName} | ${SITE.title}`}>
  <Header lang={lang} />
  <Main
    pageTitle={[`${t("page.tagPrefix")}`, `${tagName}`]}
    titleTransition={tag}
    pageDesc={tagDesc}
    lang={lang}
  >
    <h1 slot="title" transition:name={tag}>{`${t("page.tagPrefix")}${tag}`}</h1>
    <ul>
      {page.data.map(data => <Card {...data} />)}
    </ul>
  </Main>

  <Pagination {page} />

  <Footer noMarginTop={page.lastPage > 1} lang={lang} />
</Layout>

